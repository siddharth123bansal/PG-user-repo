<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginVertical="6dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/contact_sono"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="1"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        android:background="@drawable/contact_number_back"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Akash"
        android:layout_marginStart="16dp"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_sono"
        app:layout_constraintStart_toEndOf="@+id/contact_sono"
        app:layout_constraintTop_toTopOf="@+id/contact_sono" />


    <ImageView
        android:id="@+id/member_chat_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="top"
        android:src="@drawable/chat_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginEnd="20dp"
        android:id="@+id/member_phone_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="3dp"
        android:src="@drawable/call_icon"
        app:layout_constraintBottom_toBottomOf="@+id/member_chat_icon"
        app:layout_constraintEnd_toStartOf="@+id/member_chat_icon"
        app:layout_constraintTop_toTopOf="@+id/member_chat_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>