<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#F4FFFE"
    tools:context=".activities.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F4FFFE"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:src="@drawable/back_icon"

                />

            <androidx.appcompat.widget.Toolbar
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:id="@+id/toolbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/menu_icon"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>






            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="top"
                android:lineSpacingExtra="2sp"
                android:text="Floor No 3, Room No 301"
                android:textColor="#1C1B1F"
                android:textFontWeight="400"
                android:textSize="24sp"
                />





        </LinearLayout>



    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:background="#F4FFFE"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#F4FFFE"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/changePasswordButton"
                        android:layout_width="181dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/update_password" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/dndSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="0dp"
                        android:buttonTint="@color/blue"
                        android:checked="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="DND" />



                </RelativeLayout>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/receiver_profile_image"
                    android:layout_width="132dp"
                    android:layout_height="132dp"
                    android:src="@drawable/user"
                    app:civ_border_width="2dp"
                    android:layout_marginTop="16dp"
                    app:civ_border_color="#FF000000"/>

                <ImageView
                    android:id="@+id/uploadProfileImage"
                    android:layout_marginTop="8dp"
                    android:layout_width="106dp"
                    android:layout_height="16dp"
                    android:src="@drawable/upload_img"
                    />

                <RelativeLayout
                    android:layout_marginHorizontal="32dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="32dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/edit_text_selector">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/username_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/username_icon"
                        android:backgroundTint="#F4FFFE"
                        android:fontFamily="@font/roboto"
                        android:hint="Username"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#49454F"
                        android:textColorHint="#49454F"
                        android:textFontWeight="400"
                        android:textSize="16sp" />

                    <!-- ICON -->
                    <ImageView
                        android:padding="3dp"
                        android:id="@+id/username_icon"
                        android:src="@drawable/mail_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginHorizontal="32dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/edit_text_selector">

                    <!-- INPUT -->
                    <EditText
                        android:id="@+id/phone_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/phone_icon"
                        android:backgroundTint="#F4FFFE"
                        android:fontFamily="@font/roboto"
                        android:hint="Phone"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#49454F"
                        android:textColorHint="#49454F"
                        android:textFontWeight="400"
                        android:textSize="16sp" />

                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:src="@drawable/call_icon" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/Logout"
                    android:layout_width="93dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"
                    android:textFontWeight="500"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@drawable/logout_back"
                    android:layout_marginStart="32dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alternate Number"
                        android:textColorHint="#808080"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/black"
                        app:boxStrokeColor="#49454F"
                        android:layout_marginTop="12dp"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/evAltNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="top"
                        android:lineSpacingExtra="2sp"
                        android:text="Gender : "
                        android:textColor="#1C1B1F"
                        android:textSize="18sp"
                        />

                    <RadioGroup
                        android:id="@+id/genderRG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="4dp">

                        <RadioButton
                            android:id="@+id/maleRB"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Male"/>

                        <RadioButton
                            android:id="@+id/femaleRB"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Female"/>

                    </RadioGroup>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="top"
                        android:lineSpacingExtra="2sp"
                        android:text="Food Type : "
                        android:textColor="#1C1B1F"
                        android:textSize="18sp"
                        />

                    <RadioGroup
                        android:id="@+id/foodRG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="4dp">

                        <RadioButton
                            android:id="@+id/vegRB"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Veg"/>

                        <RadioButton
                            android:id="@+id/nonvegRB"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Non-Veg"/>

                    </RadioGroup>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="top"
                        android:lineSpacingExtra="2sp"
                        android:text="Office hours (in 24hrs) : "
                        android:textColor="#1C1B1F"
                        android:textSize="18sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Starts at"
                            android:textColorHint="#808080"
                            app:boxStrokeWidthFocused="2dp"
                            app:endIconMode="clear_text"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="#49454F"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/evOfficeStart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ends at"
                            android:textColorHint="#808080"
                            app:boxStrokeWidthFocused="2dp"
                            app:endIconMode="clear_text"
                            app:hintTextColor="@color/black"
                            app:boxStrokeColor="#49454F"
                            android:layout_marginTop="8dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/evOfficeEnds"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:textColor="@color/black" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Home Address"
                        android:textColorHint="#808080"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/black"
                        app:boxStrokeColor="#49454F"
                        android:layout_marginTop="12dp"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/evHomeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Eduction"
                        android:textColorHint="#808080"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconMode="clear_text"
                        app:hintTextColor="@color/black"
                        app:boxStrokeColor="#49454F"
                        android:layout_marginTop="12dp"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/evEducation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:textColor="@color/black" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/updateChanges"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="Update Changes"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto"
                        android:paddingHorizontal="6dp"
                        android:textSize="14sp"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_back" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </ScrollView>





</LinearLayout>