<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:background="#F4FFFE"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:id="@+id/tvSenderName"
        android:padding="2dp"
        android:layout_marginEnd="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Me"
        android:layout_marginBottom="6dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/sender_profile_image"
        app:layout_constraintEnd_toEndOf="@+id/sender_profile_image"
        app:layout_constraintStart_toStartOf="@+id/sender_profile_image" />


    <TextView
        android:id="@+id/sentMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/message_sent_background"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text=" Hey! RAM"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/sender_profile_image"
        app:layout_constraintTop_toTopOf="@+id/sender_profile_image" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_profile_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/user"
        android:layout_marginEnd="4dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />







</androidx.constraintlayout.widget.ConstraintLayout>